<?xml version="1.0" encoding="utf-8"?>
<!-- Archivo: bg_search.xml - Fondo para campos de búsqueda -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra interna en la parte superior -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#10000000"
                android:centerColor="#05000000"
                android:endColor="#00000000"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Fondo principal del campo de búsqueda -->
    <item
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_background_light"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Efecto de brillo sutil en la parte inferior -->
    <item
        android:top="50dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#00FFFFFF"
                android:endColor="#08FFFFFF"/>
            <corners
                android:bottomLeftRadius="16dp"
                android:bottomRightRadius="16dp"/>
        </shape>
    </item>

</layer-list>