<?xml version="1.0" encoding="utf-8"?>
<!-- Archivo: bg_card.xml - Fondo para tarjetas con efecto de elevaciÃ³n -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra exterior en la parte inferior derecha -->
    <item
        android:left="6dp"
        android:top="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#12000000"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>

    <!-- Sombra exterior en la parte superior izquierda -->
    <item
        android:right="6dp"
        android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#50FFFFFF"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>

    <!-- Fondo principal de la tarjeta -->
    <item
        android:left="3dp"
        android:top="3dp"
        android:right="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_surface_elevated"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>

    <!-- Efecto de brillo sutil en la parte superior -->
    <item
        android:left="3dp"
        android:top="3dp"
        android:right="3dp"
        android:bottom="50dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#10FFFFFF"
                android:endColor="#00FFFFFF"/>
            <corners
                android:topLeftRadius="24dp"
                android:topRightRadius="24dp"/>
        </shape>
    </item>

</layer-list>