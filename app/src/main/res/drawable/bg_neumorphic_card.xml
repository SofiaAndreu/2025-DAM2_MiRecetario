<?xml version="1.0" encoding="utf-8"?>
<!-- ARCHIVO: res/drawable/bg_neumorphic_card.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra exterior oscura (abajo-derecha) -->
    <item
        android:left="6dp"
        android:top="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#12000000"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>

    <!-- Sombra exterior clara (arriba-izquierda) -->
    <item
        android:right="6dp"
        android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#50FFFFFF"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>

    <!-- Card principal -->
    <item
        android:left="3dp"
        android:top="3dp"
        android:right="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_surface_elevated"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>

    <!-- Brillo sutil en la parte superior -->
    <item
        android:left="3dp"
        android:top="3dp"
        android:right="3dp"
        android:bottom="50dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#10FFFFFF"
                android:endColor="#00FFFFFF"/>
            <corners
                android:topLeftRadius="24dp"
                android:topRightRadius="24dp"/>
        </shape>
    </item>

</layer-list>