<?xml version="1.0" encoding="utf-8"?>
<!-- Archivo: bg_circulo.xml - Fondo circular para números de pasos -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra oscura en la parte inferior derecha -->
    <item
        android:left="2dp"
        android:top="2dp">
        <shape android:shape="oval">
            <solid android:color="#20000000"/>
        </shape>
    </item>

    <!-- Sombra clara en la parte superior izquierda -->
    <item
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="#40FFFFFF"/>
        </shape>
    </item>

    <!-- Círculo principal con gradiente de color -->
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:startColor="@color/color_primary_light"
                android:endColor="@color/color_primary"/>
        </shape>
    </item>

</layer-list>