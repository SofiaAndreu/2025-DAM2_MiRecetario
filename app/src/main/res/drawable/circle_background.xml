<?xml version="1.0" encoding="utf-8"?>
<!-- ARCHIVO: res/drawable/circle_background.xml -->
<!-- CREAR O REEMPLAZAR -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra oscura (abajo-derecha) -->
    <item
        android:left="2dp"
        android:top="2dp">
        <shape android:shape="oval">
            <solid android:color="#20000000"/>
        </shape>
    </item>

    <!-- Sombra clara (arriba-izquierda) -->
    <item
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="#40FFFFFF"/>
        </shape>
    </item>

    <!-- CÃ­rculo principal con gradiente -->
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:startColor="@color/color_primary_light"
                android:endColor="@color/color_primary"/>
        </shape>
    </item>

</layer-list>