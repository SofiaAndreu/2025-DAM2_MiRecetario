<?xml version="1.0" encoding="utf-8"?>
<!-- Archivo: bg_button.xml - Fondo para botones con efectos visuales -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado cuando el bot칩n est치 siendo presionado -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Efecto de profundidad para estado presionado -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="135"
                        android:startColor="#15000000"
                        android:centerColor="@color/color_primary"
                        android:endColor="#15FFFFFF"/>
                    <corners android:radius="14dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Estado normal del bot칩n (sin presionar) -->
    <item>
        <layer-list>
            <!-- Sombra en la parte inferior derecha -->
            <item
                android:left="2dp"
                android:top="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#25000000"/>
                    <corners android:radius="14dp"/>
                </shape>
            </item>

            <!-- Sombra en la parte superior izquierda -->
            <item
                android:right="2dp"
                android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#50FFFFFF"/>
                    <corners android:radius="14dp"/>
                </shape>
            </item>

            <!-- Fondo principal del bot칩n -->
            <item
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/color_primary"/>
                    <corners android:radius="14dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>