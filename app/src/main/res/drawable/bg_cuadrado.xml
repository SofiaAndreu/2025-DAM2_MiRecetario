<?xml version="1.0" encoding="utf-8"?>
<!-- Archivo: bg_cuadrado.xml - Fondo para elementos cuadrados con efecto de profundidad -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra oscura en la parte inferior derecha -->
    <item
        android:left="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#15000000"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <!-- Sombra clara en la parte superior izquierda -->
    <item
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#40FFFFFF"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <!-- Fondo principal del elemento -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_background"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

</layer-list>