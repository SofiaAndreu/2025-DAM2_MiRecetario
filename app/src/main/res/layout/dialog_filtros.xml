<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filtros_avanzados"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/color_primary"
        android:layout_marginBottom="16dp" />

    <!-- Filtrar por categoría -->
    <TextView
        android:id="@+id/label_categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_categoria"
        android:textStyle="bold"
        android:textColor="@color/color_text_primary"
        android:layout_marginBottom="8dp"
        android:labelFor="@id/spinner_categoria" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:hint="@string/hint_categoria">

        <AutoCompleteTextView
            android:id="@+id/spinner_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:hint="@string/hint_categoria" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Filtrar por dificultad -->
    <TextView
        android:id="@+id/label_dificultad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_dificultad"
        android:textStyle="bold"
        android:textColor="@color/color_text_primary"
        android:layout_marginBottom="8dp"
        android:labelFor="@id/spinner_dificultad" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:hint="@string/hint_dificultad">

        <AutoCompleteTextView
            android:id="@+id/spinner_dificultad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:hint="@string/hint_dificultad" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Filtrar por tiempo máximo -->
    <TextView
        android:id="@+id/label_tiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_tiempo"
        android:textStyle="bold"
        android:textColor="@color/color_text_primary"
        android:layout_marginBottom="8dp"
        android:labelFor="@id/slider_tiempo" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_tiempo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="0"
        android:valueTo="180"
        android:value="60"
        android:stepSize="15"
        app:labelBehavior="withinBounds"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/descripcion_slider_tiempo" />

    <TextView
        android:id="@+id/tv_tiempo_seleccionado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tiempo_predeterminado"
        android:textColor="@color/color_text_secondary"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal" />

    <!-- Solo favoritas -->
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/cb_solo_favoritas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/solo_favoritas"
        android:layout_marginBottom="24dp" />

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_limpiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_limpiar"
            android:layout_marginEnd="8dp"
            style="@style/Widget.Material3.Button.TextButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_aplicar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_aplicar"
            style="@style/Widget.RecetarioClasico.Button" />

    </LinearLayout>

</LinearLayout>
