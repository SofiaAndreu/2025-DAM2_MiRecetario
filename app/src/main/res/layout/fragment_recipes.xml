<?xml version="1.0" encoding="utf-8"?>
<!-- Archivo: fragment_recipes.xml - Pantalla principal de listado de recetas -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:paddingTop="24dp">

    <!-- Contenedor de la barra de búsqueda -->
    <FrameLayout
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="@drawable/bg_search"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <!-- Campo de búsqueda de recetas -->
            <EditText
                android:id="@+id/et_buscar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/recetas_buscar"
                android:background="@android:color/transparent"
                android:paddingVertical="16dp"
                android:paddingHorizontal="12dp"
                android:minHeight="48dp"
                android:textColor="@color/color_text_primary"
                android:textColorHint="@color/color_text_hint"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:maxLines="1" />

            <!-- Contenedor del botón de filtros -->
            <FrameLayout
                android:id="@+id/btn_filtros_container"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_cuadrado"
                android:clickable="true"
                android:focusable="true">

                <!-- Botón para abrir filtros avanzados -->
                <ImageButton
                    android:id="@+id/btn_filtros"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/recetas_filtrar"
                    app:tint="@color/color_primary" />

            </FrameLayout>

        </LinearLayout>

    </FrameLayout>

    <!-- Vista de desplazamiento horizontal para chips de filtros rápidos -->
    <HorizontalScrollView
        android:id="@+id/scroll_chips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/search_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Grupo de chips para filtros rápidos por categoría -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_filtros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:singleSelection="false">

            <!-- Chip para mostrar todas las recetas -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_todas"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Todas"
                android:checked="true" />

            <!-- Chip para filtrar por categoría postres -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_postres"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/categoria_postres" />

            <!-- Chip para filtrar por categoría platos principales -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_principales"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/categoria_principales" />

            <!-- Chip para filtrar recetas rápidas -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_rapidas"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rápidas" />

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

    <!-- Layout con funcionalidad de pull-to-refresh -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/scroll_chips"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Lista principal de recetas -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recetas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="8dp"
            tools:listitem="@layout/item_receta" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Estado vacío cuando no hay resultados de búsqueda -->
    <LinearLayout
        android:id="@+id/layout_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="48dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Icono para estado vacío -->
        <TextView
            android:id="@+id/empty_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="80sp"
            android:layout_marginBottom="24dp" />

        <!-- Título para estado vacío -->
        <TextView
            android:id="@+id/empty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recetas_sin_resultados"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/color_text_primary"
            android:layout_marginBottom="8dp" />

        <!-- Subtítulo con sugerencias -->
        <TextView
            android:id="@+id/empty_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Intenta con otros términos o revisa los filtros"
            android:textSize="16sp"
            android:textColor="@color/color_text_secondary"
            android:layout_marginBottom="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Botón para limpiar búsqueda y filtros -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_limpiar_busqueda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_limpiar_busqueda"
            android:visibility="gone"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:strokeColor="@color/color_primary" />

    </LinearLayout>

    <!-- Loading -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>