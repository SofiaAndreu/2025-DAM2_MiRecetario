<?xml version="1.0" encoding="utf-8"?>
<!-- Archivo: item_ingrediente.xml - Elemento de lista para ingredientes -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_search"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Checkbox para marcar ingrediente como comprado -->
        <CheckBox
            android:id="@+id/cb_ingrediente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/color_primary"
            android:layout_marginEnd="12dp" />

        <!-- Texto del ingrediente con cantidad -->
        <TextView
            android:id="@+id/tv_ingrediente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="@color/color_text_primary"
            android:lineSpacingExtra="2dp"
            tools:text="200g de harina" />

    </LinearLayout>

</FrameLayout>