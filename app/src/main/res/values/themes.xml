<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema principal - Diseño moderno inspirado en iOS -->
    <style name="Theme.RecetarioApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/color_accent</item>
        <item name="colorSecondaryVariant">@color/color_highlight</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Superficies -->
        <item name="colorSurface">@color/color_surface_elevated</item>
        <item name="colorOnSurface">@color/color_text_primary</item>
        <item name="android:colorBackground">@color/color_background</item>
        <item name="colorOnBackground">@color/color_text_primary</item>

        <!-- Error -->
        <item name="colorError">@color/color_error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/color_primary</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/color_background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- Shapes - Bordes redondeados generosos -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.RecetarioApp.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.RecetarioApp.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.RecetarioApp.LargeComponent</item>

        <!-- Elevaciones y sombras -->
        <item name="elevation">8dp</item>
    </style>

    <!-- ========================================= -->
    <!--          FORMAS MODERNAS (iOS-like)      -->
    <!-- ========================================= -->

    <style name="ShapeAppearance.RecetarioApp.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.RecetarioApp.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.RecetarioApp.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!-- ========================================= -->
    <!--          TOOLBAR MODERNO                 -->
    <!-- ========================================= -->

    <style name="Widget.RecetarioClasico.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/color_secondary_light</item>
        <item name="android:background">@color/color_primary</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="TextAppearance.RecetarioApp.Toolbar.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <!-- ========================================= -->
    <!--          BOTONES MODERNOS (iOS-style)    -->
    <!-- ========================================= -->

    <style name="Widget.RecetarioClasico.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/color_primary</item>
        <item name="cornerRadius">14dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Widget.RecetarioClasico.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/color_primary</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="cornerRadius">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="rippleColor">@color/color_ripple</item>
    </style>

    <style name="Widget.RecetarioClasico.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/color_primary</item>
        <item name="cornerRadius">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/color_ripple</item>
    </style>

    <!-- ========================================= -->
    <!--          CARDS MODERNAS (Neumorfismo)    -->
    <!-- ========================================= -->

    <style name="Widget.RecetarioClasico.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/color_surface_elevated</item>
        <item name="cardElevation">6dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="contentPadding">0dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>
    </style>

    <style name="Widget.RecetarioClasico.CardView.Flat" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/color_surface</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeColor">@color/color_border_light</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- ========================================= -->
    <!--          TEXT INPUT MODERNO              -->
    <!-- ========================================= -->

    <style name="Widget.RecetarioClasico.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/color_primary</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/color_text_hint</item>
        <item name="android:textColorHint">@color/color_text_hint</item>
        <item name="boxBackgroundColor">@color/color_background_light</item>
    </style>

    <!-- ========================================= -->
    <!--          CHIPS MODERNOS                  -->
    <!-- ========================================= -->

    <style name="Widget.RecetarioClasico.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/color_surface</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="chipMinHeight">36dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <!-- ========================================= -->
    <!--          FAB MODERNO                     -->
    <!-- ========================================= -->

    <style name="Widget.RecetarioClasico.FAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/color_primary</item>
        <item name="tint">@color/white</item>
        <item name="elevation">8dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.RecetarioApp.FAB</item>
    </style>

    <style name="ShapeAppearance.RecetarioApp.FAB" parent="ShapeAppearance.Material3.Corner.Full">
        <item name="cornerSize">50%</item>
    </style>

    <!-- ========================================= -->
    <!--          BOTTOM NAVIGATION MODERNO       -->
    <!-- ========================================= -->

    <style name="Widget.RecetarioClasico.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/color_background</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="itemRippleColor">@color/color_ripple</item>
        <item name="elevation">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- ========================================= -->
    <!--          TIPOGRAFÍA MODERNA              -->
    <!-- ========================================= -->

    <style name="TextAppearance.RecetarioApp.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="TextAppearance.RecetarioApp.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="TextAppearance.RecetarioApp.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_text_secondary</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

</resources>