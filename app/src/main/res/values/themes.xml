<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- [1] TEMA PRINCIPAL DE LA APLICACIÓN -->
    <!--     Base de la app: colores, tipografía, botones, etc.  -->
    <style name="Theme.RecetarioApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Colores PRINCIPALES -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_primary_light</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Colores de FONDO y TEXTO -->
        <item name="colorSurface">@color/color_background</item>
        <item name="colorOnSurface">@color/color_text_primary</item>
        <item name="android:colorBackground">@color/color_background_light</item>

        <!-- Color ERRORES -->
        <item name="colorError">@color/color_error</item>
        <item name="colorOnError">@color/white</item>

        <!-- BARRA SUPERIOR -->
        <item name="android:statusBarColor">@color/color_primary</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- BARRA INFERIOR (NAV) -->
        <item name="android:navigationBarColor">@color/color_background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- TIPOGRAFIA -->
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:fontFamily">@font/raleway_regular</item>

        <!-- FORMAS COMPONENTES -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.RecetarioApp.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.RecetarioApp.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.RecetarioApp.LargeComponent</item>
    </style>
    <!-- ========================================================================= -->

    <!-- FORMAS PERSONALIZADAS -->
    <style name="ShapeAppearance.RecetarioApp.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearance.RecetarioApp.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.RecetarioApp.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    <!-- ========================================================================= -->


    <!-- Toolbar personalizado -->
    <style name="Widget.RecetarioApp.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/color_secondary_light</item>
        <item name="android:background">@color/color_primary</item>
    </style>
    <!-- ========================================================================= -->


    <!-- BOTONES -->
    <style name="Widget.RecetarioClasico.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/color_primary</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
    </style>

    <style name="Widget.RecetarioClasico.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/color_primary</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="cornerRadius">4dp</item>
    </style>
    <!-- ========================================================================= -->


    <!-- Cards (recetas, ingredientes) -->
    <style name="Widget.RecetarioClasico.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/color_background</item>
        <item name="cardElevation">3dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>
    <!-- ========================================================================= -->

    <!-- CAMPOS TEXTO -->
    <style name="Widget.RecetarioClasico.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/color_primary</item>
        <item name="hintTextColor">@color/color_text_hint</item>
        <item name="android:textColorHint">@color/color_text_hint</item>
    </style>
    <!-- ========================================================================= -->

    <!-- TITULO DE TOOLBAR -->
    <style name="TextAppearance.RecetarioApp.Toolbar.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- ========================================================================= -->

    <!-- FAB (botón esquina inferior derecha) -->
    <style name="Widget.RecetarioClasico.FAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/color_primary</item>
        <item name="tint">@color/white</item>
    </style>
</resources>